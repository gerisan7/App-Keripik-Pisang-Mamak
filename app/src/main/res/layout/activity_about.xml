<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TENTANG APLIKASI"
        android:textSize="30dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:id="@+id/de1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/be1"
        android:layout_height="wrap_content"
        android:text="Aplikasi sederhana ini di buat berfungsi untuk mencari lokasi"
        android:layout_below="@id/de1"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/be1"
        android:id="@+id/ce1"
        android:textStyle="italic"
        android:text="serta memesan Keripik Pisang secara online."
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ce1"
        android:text="Berikut sedikit profil saya : "
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/de1"
        android:layout_marginTop="-220dp"
        android:src="@drawable/fototentang" />


    <ListView
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/de1"
        android:layout_centerVertical="true"
        android:layout_marginTop="420dp" />

</RelativeLayout>