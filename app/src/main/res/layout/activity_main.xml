<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-116dp"
        android:src="@drawable/k" />

    <Button
        android:drawableTop="@drawable/ic_profile"
        android:id="@+id/button_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:padding="30dp"
        android:text="Profil"

        />

    <Button
        android:drawableTop="@drawable/ic_foto"
        android:layout_width="200dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/button_1"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:id="@+id/button_2"
        android:layout_centerHorizontal="true"
        android:text="Galeri"
        android:padding="30dp"
        />

    <Button
        android:drawableTop="@drawable/ic_pesan"
        android:layout_height="wrap_content"
        android:id="@+id/button_3"
        android:padding="30dp"
        android:layout_width="200dp"
        android:layout_below="@id/button_2"
        android:text="Pesan"
        />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/button_4"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_below="@id/mapsBtn"
        android:text="About"
        android:padding="40dp"
        />

    <Button
        android:drawableTop="@drawable/ic_map"
        android:layout_height="wrap_content"
        android:id="@+id/mapsBtn"
        android:layout_width="200dp"
        android:layout_below="@id/button_2"
        android:text="LOKASI"
        android:layout_marginLeft="2dp"
        android:padding="30dp"
        android:layout_toRightOf="@id/button_3"

        />




</RelativeLayout>